<div class="py-8 grid grid-cols-2 md:grid-cols-4 justify-between gap-y-10">
    {% for skill in skillList %}
    <div class="flex flex-col justify-start items-center content-center text-center">
        <img class="w-12 h-auto" src="{{skill.iconUrl}}" alt="Showcase Image" />
        <h4>
            {% if skill.projectCount %}
                <a class="secondary bold hover:text-white pt-2" href="/projects?filter={{skill.tag}}">
                {{skill.name}}
                </a>
            {% else %}
                <span class="introduction bold">{{skill.name}}</span>
            {% endif %}
        </h4>
        {% if skill.experience %}
        <h6 class="text-white leading-tight">{{skill.experience}}
        {% endif %} 
        {% if skill.projectCount %} 
        | 

        <a href="/projects?filter={{skill.tag}}" class="secondary hover:text-white">
        <u class="bold">
            {{skill.projectCount}}
        </u>
        </a>
        {% endif %}</h6>
    </div>
    {% endfor %}
</div>