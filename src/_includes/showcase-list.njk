{% set skillList = skills.skill[index].subskill %}
<div class="py-8 grid grid-cols-2 md:grid-cols-4 justify-between gap-y-12">
    {% for skill in skillList %}
    <div class="flex flex-col justify-center items-center">
        <img class="w-12 h-auto" src="{{skill.imgUrl}}" alt="Showcase Image" />
        <h3>
            {% if not skill.communicative %}
                <a class="secondary bold hover:text-white pt-2" href="/projects?category={{skill.category}}&tag={{skill.tag}}">
                {{skill.title}}
                </a>
            {% else %}
                <span class="introduction bold">{{skill.title}}</span>
            {% endif %}
        </h3>

        <h4 class="text-white leading-tight">{{skill.time.en}}
        {% if skill.projectCount %} 
        | 
        <a href="/projects?category={{skill.category}}&tag={{skill.tag}}" class="secondary hover:text-white">
        <u class="bold">
            {{skill.projectCount}}
        </u>
        </a>
        {% endif %}</h4>
    </div>
    {% endfor %}
</div>