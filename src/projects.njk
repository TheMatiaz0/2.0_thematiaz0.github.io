{# remember to refresh the 11ty to apply changes #}
<script>

const params = new Proxy(new URLSearchParams(window.location.search), {
  get: (searchParams, prop) => searchParams.get(prop),
});

const projectsDiv = document.querySelector('.projects');
const {projects, languages} = JSON.parse(`{{ projects | json }}`);
languages.push("All");
const projectTemplate = (project) => `<div class="grid grid-cols-1 md:grid-cols-2 justify-between py-6 gap-12">{%include "project-card.njk"%}</div>
`;

const buttonsDiv = document.querySelector('.buttons');


const buttonTemplate = (language) => `<button class="btn-secondary" onclick="selectLang('${language}')">${language}</button>`;

let lang = null;

update();

function selectLang(language) {

    var searchParams;
    if (language) {
        searchParams = new URLSearchParams(window.location.search);
        searchParams.set("language", language);
        window.location.search = searchParams.toString();

    }
    else {
        searchParams = new URLSearchParams();
        window.location.href = `${window.location.origin}${window.location.pathname}`
    }

    update();
}

function update() {

    let filtered = projects.filter(x => x.language === params.language);
    let p = filtered.length <= 0 ? projects : filtered;
    projectsDiv.innerHTML =
        p
        .map(projectTemplate).join('');
    buttonsDiv.innerHTML = languages.map(buttonTemplate).join('');;
}
</script>