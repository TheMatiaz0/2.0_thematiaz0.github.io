
{#---
pagination:
    data: projects
    size: 1
    alias: project
permalink: "{{ project.devUrl | slug}}.html"
layout: default.njk
---

<section class="pt-64">
<h1 class="flex pb-5 introduction justify-center align-middle items-center">{{project.title}}</h1>
<div class="flex flex-col md:flex-row justify-between gap-y-6">
    <p class="big-paragraph px-8 text-white">{{project.description.en}}</p>
    <div class="flex flex-col w-[100%]">
    <div class="flex border-b justify-between px-8 border-[color:#DCDCDC] text-white">
        <p class="big-paragraph bold">Duration</p>
        <p class="big-paragraph">February 2020 - June 2020</p>
    </div>
    <div class="flex border-b justify-between px-8 border-[color:#DCDCDC] text-white">
        <p class="big-paragraph bold">Team Size</p>
        <p class="big-paragraph">40+</p>
    </div>
    </div>
</div>
{% for section in project.article.sections %}
    <div class="pt-8 introduction">
        <h3>{{section.header}}</h3>
        <p>{{section.text}}</p>
        <img src="{{section.content}}" />
    </div>
{%endfor%}

</section>#}