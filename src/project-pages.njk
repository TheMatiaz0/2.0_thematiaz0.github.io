---
pagination:
    data: projects
    size: 1
    alias: project
permalink: "{{ project.url | slug}}.html"
layout: default.njk
---

<section class="pt-64">
<h1 class="flex pb-10 introduction justify-center align-middle items-center">{{project.title}}</h1>
<div class="flex flex-col md:flex-row">
    <p class="big-paragraph px-8 text-white">{{project.shortDescription}}</p>
    <div class="flex flex-col md:w-[2700px] md:p-0 p-4 flex-wrap">
    {% for detail in project.details%}
    {% set borderClass = "" %}
    {% set paddingClass = "p-4" %}
    {% if loop.first %}
        {% set paddingClass = "pb-4 px-4" %}
    {% endif %}
    {% if not loop.last %}
        {% set borderClass = "border-b" %}
    {%endif%}
    <div class="{{paddingClass}} {{borderClass}} border-[color:#DCDCDC] text-white">
        <p class="paragraph bold">{{detail.header}}</p>
        <p class="paragraph">{{detail.content}}</p>
    </div>
    {%endfor%}
    </div>
</div>
